---
import Layout from '../../layouts/Layout.astro'

const posts = await Astro.glob('./*.md')
---

<Layout title="Blog">
  <p>Post Archive:</p>
  <ul>
    {
      posts.map(post => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
